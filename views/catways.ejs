<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Gestion des catways</title>
        <link rel="stylesheet" href="/stylesheets/style.css">
    </head>
    <body>
        <header>
            <h1>Gestion des catways</h1>
            <nav>
                <a href="/dashboard">ðŸ’» Retour au tableau de bord</a>
            </nav>
        </header>
        <main>
            <section>
                <table class="editable-table">
                    <caption>Liste des catways</caption>
                    <thead>
                        <tr>
                            <th>NumÃ©ro</th>
                            <th>Type</th>
                            <th>Ã‰tat</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% catways.forEach(catway => { %>
                            <tr>
                                <td><%= catway.catwayNumber %></td>
                                <td><%= catway.catwayType === 'short' ? 'Court' : 'Long' %></td>
                                <td class="state-cell">
                                    <span class="state-text"><%= catway.catwayState %></span>
                                    <%- include('partials/edit-catway-form', { catway: catway }) %>
                                </td>
                                <td>
                                    <button type="button" class="edit-btn">Modifier</button>
                                    <%- include('partials/delete-catway-form', { catway: catway }) %>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </section>
            <section>
                <button type="button" class="add-btn">Ajouter un nouveau catway</button>
                <%- include('partials/add-catway-form') %>
                <% if (error) { %>
                    <p class="error-message"><%= error %></p>
                <% } %>
            </section>
        </main>
        <script type="module" src="/javascripts/edit-btn.js"></script>
        <script type="module" src="/javascripts/delete-btn.js"></script>
        <script type="module" src="/javascripts/add-catway.js"></script>
    </body>
</html>