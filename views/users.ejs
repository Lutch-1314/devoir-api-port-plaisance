<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gestion des utilisateurs</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <header>
    <h1>Gestion des utilisateurs</h1>
    <nav>
      <a href="/dashboard">ğŸ’» Retour au tableau de bord</a>
    </nav>
  </header>
  <main>
    <div class="message <%= messageType || '' %> <%= message ? '' : 'hidden' %>">
    <%= message || '' %>
    </div>
    <section>
      <h2>Liste des utilisateurs</h2>
      <% if (users && users.length > 0) { %>
        <table class="editable-table users">
          <thead>
            <tr>
              <th>Nom d'utilisateur</th>
              <th>Email</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user => { %>
              <tr data-email="<%= user.email %>">
                <td class="display-only"><%= user.username %></td>
                <td class="display-only"><%= user.email %></td>
                <td>
                  <div class="btn-container">
                    <button type="button" class="edit-btn">Modifier</button>
                    <%- include('partials/users/edit-user-form', { user: user }) %>
                    <button type="button" class="delete-btn" data-type="user">Supprimer</button>
                  </div>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <p>Aucun utilisateur trouvÃ©.</p>
      <% } %>
    </section>
    <section>
      <h2>Ajouter un nouvel utilisateur</h2>
      <button type="button" class="add-btn">Ajouter un nouvel utilisateur</button>
      <%- include('partials/users/add-user-form') %>
    </section>
  </main>
  <script type="module" src="/javascripts/edit-user.js"></script>
  <script type="module" src="/javascripts/delete-btn.js"></script>
  <script type="module" src="/javascripts/add-user.js"></script>
</body>
</html>
