<form class="update-form hidden" data-id="<%= reservation._id %>">
  <input type="number" name="catwayNumber" value="<%= reservation.catwayNumber %>" required>
  <input type="text" name="clientName" value="<%= reservation.clientName %>" required>
  <input type="text" name="boatName" value="<%= reservation.boatName %>" required>
  <input type="date" name="startDate" value="<%= new Date(reservation.startDate).toLocaleDateString('fr-FR') %>" required>
  <input type="date" name="endDate" value="<%= new Date(reservation.endDate).toLocaleDateString('fr-FR') %>" required>
  <button type="submit">Sauvegarder</button>
  <button type="button" class="cancel-btn">Annuler</button>
</form>